extends layout

block content
    .wrap
        div(class="box col-xs-10 col-sm-8 col-md-6 col-lg-4 col-xl-4")
            .box-tabs
                ul(class="nav nav-tabs")
                    li.nav-item
                        a#signInBtn(href="#", class="nav-link active")  Zaloguj się
                    li.nav-item
                        a.nav-link#signUpBtn(href="#") Rejestracja
            #box-content
                #signIn
                    if loginError != null
                        .err #{loginError}
                    form(action="/user/login", method="post")
                        .form-group
                            label(for="login") E-mail
                            input.form-control(type="email", id="login", name="email")
                        .form-group
                            label(for="pass") Hasło
                            input.form-control(type="password", id="pass", name="password")
                        input(type="submit", class="btn signInBtn", value="Zaloguj się")
                #signUp
                    form(action="/user/signup", method="post")
                        .form-group
                            label(for="mail") E-mail
                            input.form-control(type="email", id="mail", name="mail")
                        .form-group
                            label(for="pass") Hasło
                            input.form-control(type="password", id="pass", name="pass")
                        .form-group
                            label(for="nick") Nickname
                            input.form-control(type="text", id="nick", name="nick")
                        input(type="submit", class="btn signInBtn", value="Zarejestruj się")

